@{
    ViewBag.Title = "Edit Environment Components";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h2 style="color:#092bb2">Configure Each Component</h2>
    </div>
    <div class="panel-body">
        <h4 style="padding:10px 5px 10px 5px;color:#092bb2">Enter Name and Value for each Component Attribute</h4>
        <table id="componentAttributeTable" class="col-xs-8">
            <tr>
                <th style="padding:5px">Attribute Name</th>
                <th style="padding:5px">Attribute Value</th>
            </tr>
            @Html.Action("NewComponentAttributeRow")


        </table>
        <div class="col-xs-12" style="padding:5px">
            <input type="button" id="btnAddAttribute" value="Add component attribute" class="btn-success" />

        </div>
    </div>
    <div class="panel-footer">
        <button type="submit" class="btn-primary btn-lg btn-sharp">Submit !</button>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $("#btnAddAttribute").click(function (e) {
            var itemIndex = $("#componentAttributeTable tr").length;
            e.preventDefault();
            $.get("@Url.Action("NewComponentAttributeRow")", function (data) {
                $("#componentAttributeTable").append(data);
            });            
        });
    });
</script>
